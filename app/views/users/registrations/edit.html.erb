<div class="users-edit">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <div><%= f.label :username %></div>
      <div><%= f.text_field :username, autofocus: true %></div>
    </div>
  
    <div class="field">
      <div><%= f.label :email %></div>
      <div><%= f.text_field :email, autocomplete: "email" %></div>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <div><%= f.label :password %></div>
      <div><%= f.password_field :password, autocomplete: "new-password", placeholder: "6 characters minimum" %></div>
    </div>
  
    <div class="field">
      <div><%= f.label :password_confirmation %></div>
      <div><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>
  
    <div class="field">
      <div><%= f.label :current_password %></div>
      <div><%= f.password_field :current_password, autocomplete: "current-password" %></div>
    </div>

    <div class="actions">
      <%= f.submit "Update", :class => "form-button", data: { turbo: "false" } %>
    </div>
  <% end %>
  
  <div class="deletion">
    <div><strong>Unhappy?</strong></div>
    <div><%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></div>
  </div>
  
  <button><%= link_to "Back", :back %></button>
</div>
