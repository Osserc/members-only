<div class="users-sign-up">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <div><%= f.label :username %></div>
      <div><%= f.text_field :username, autofocus: true %></div>
    </div>
  
    <div class="field">
      <div><%= f.label :email %></div>
      <div><%= f.email_field :email, autocomplete: "email" %></div>
    </div>
  
    <div class="field">
      <div><%= f.label :password %></div>
      <div><%= f.password_field :password, autocomplete: "new-password", placeholder: "6 characters minimum" %></div>
    </div>
  
    <div class="field">
      <div><%= f.label :password_confirmation %></div>
      <div><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up", :class => "form-button", data: { turbo: "false" } %>
    </div>
  <% end %>
  
  <button><%= render "users/shared/links" %></button>

  <button><%= link_to "Back to home", stories_path %></button>
</div>
